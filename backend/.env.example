# Database
DATABASE_URL="postgresql://user:password@localhost:5432/lrnchat?schema=public"

# Redis (for sessions and presence)
REDIS_URL="redis://localhost:6379"

# JWT Secret (generate a strong random string)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3000
NODE_ENV="development"

# CORS (frontend URLs)
WEB_URL="http://localhost:5173"
MOBILE_URL="exp://localhost:19000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Service (for email verification)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="LRN CHAT <noreply@lrnchat.com>"
